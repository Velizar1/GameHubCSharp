@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-light">Register</h1>

<div class=" d-block text-center">
    <form class="d-inline-block" asp-route-returnUrl="@Model.ReturnUrl" method="POST">
        <div asp-validation-summary="All"></div>
        <div class="form-col">
            <div class="col-md-12 mb-2">
                <div>
                    @if (ViewData["userExist"] != null)
                    {
                        <small style="color: red;font-size:15px">
                            Username or email are already taken!
                        </small>
                    }
                </div>
                <label style="color: white;">Username</label>
                <input class="form-control" asp-for="Input.UserName">

                <div class="valid-feedback">
                    <span asp-validation-for="Input.UserName" style="color: red;font-size:15px"> Looks good!</span>
                </div>
            </div>
            <div class="col-md-12 mb-2">
                <label style="color: white;">Email</label>
                <input class="form-control" asp-for="Input.Email">
                <div class="valid-feedback">
                    <span asp-validation-for="Input.Email"
                          style="color: red;font-size:15px"></span>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <label style="color: white;">Password</label>
                <input asp-for="Input.Password" class="form-control" >

                <div class="valid-feedback">
                    <span asp-validation-for="Input.Password"
                          style="color: red;font-size:15px">Looks good!</span>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <label style="color: white;">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" >

                <div class="valid-feedback">
                    <span asp-validation-for="Input.ConfirmPassword"
                          style="color: red;font-size:15px">Looks good!</span>
                </div>
            </div>
        </div>
        <button class="btn btn-primary border-0 bg-dark btn-lg" type="submit">Let's Go</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
